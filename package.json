{
  "name": "gobeze-ai",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "REMIX_CONFIG_PATH=remix.config.mjs remix build",
    "dev": "remix dev --manual",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc",
    "test": "vitest watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx . --fix",
    "analyze": "npm run lint && npm run security && npm run metrics",
    "security": "snyk test && dependency-check .",
    "metrics": "sonar-scanner",
    "performance": "clinic doctor -- node dist/server.js",
    "ci": "npm run test && npm run analyze",
    "validate-monitoring": "ts-node scripts/validateMonitoringConfig.ts",
    "predeploy": "npm run validate-env && npm run validate-monitoring"
  },
  "dependencies": {
    "@atproto/api": "^0.6.23",
    "@remix-run/node": "^2.3.1",
    "@remix-run/react": "^2.3.1",
    "@remix-run/serve": "^2.3.1",
    "ai": "^2.2.31",
    "ioredis": "^5.3.2",
    "isbot": "^3.6.8",
    "marked": "^5.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.3.1",
    "@remix-run/eslint-config": "^2.3.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "autocannon": "^7.0.0",
    "clinic": "^12.0.0",
    "dependency-check": "^4.1.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "snyk": "^1.0.0",
    "sonarqube-scanner": "^3.0.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
